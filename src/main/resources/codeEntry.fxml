<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controles.CodeEntry"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <VBox alignment="CENTER" layoutX="75.0" layoutY="32.0" spacing="10.0">
            <Label text="Enter the code received in your email" />
            <TextField fx:id="codeField" />
            <Button onAction="#verifyCode" text="Submit" />
        </VBox>
    </children>

</AnchorPane>
